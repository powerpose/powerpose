<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.powerPoseTest.jungah.dao.IJungahRepository">
    <insert id="insertJungah" parameterType="String">
		<![CDATA[
        insert into jungah
        values (jungah_seq.NEXTVAL, #{title}, #{context})
        ]]>
	</insert>

    <select id="selectAllJungah" resultType="com.example.powerPoseTest.jungah.model.Jungah">
		<![CDATA[
        SELECT id AS "id", title AS "title", context AS "context"
        FROM jungah
        ]]>
	</select>
    <select id="selectAJungah" resultType="com.example.powerPoseTest.jungah.model.Jungah">
		<![CDATA[
        SELECT id AS "id", title AS "title", context AS "context"
        FROM jungah
        WHERE id = #{id}
        ]]>
	</select>
    <update id="updateJungah" parameterType="hashmap">
		<![CDATA[
        UPDATE jungah
        SET title   = #{title},
            context = #{context}
        WHERE id = #{id}
        ]]>
	</update>
    <delete id="deleteJungah">
	<![CDATA[
        DELETE
        FROM jungah
        WHERE id = #{id}
        ]]>
	</delete>
</mapper>

